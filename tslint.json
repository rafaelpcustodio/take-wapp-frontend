{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rulesDirectory": ["tslint-plugin-prettier"],
  "rules": {
    "prettier": true,
    "interface-name": false
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "tools",
    "outDir": "build",
    "inlineSourceMap": true
  },
  "include": ["pages/**/*.ts"]
}
